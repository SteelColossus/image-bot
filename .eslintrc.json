{
    "extends": "eslint:all",
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "brace-style": [
            "error",
            "1tbs"
        ],
        "func-style": [
            "error",
            "declaration"
        ],
        "function-call-argument-newline": [
            "error",
            "consistent"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "max-len": [
            "error",
            {
                "code": 160
            }
        ],
        "max-lines-per-function": "off",
        "max-statements": "off",
        "multiline-ternary": [
            "error",
            "always-multiline"
        ],
        "no-extra-parens": "off",
        "no-magic-numbers": "off",
        "no-negated-condition": "off",
        "no-ternary": "off",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "object-property-newline": [
            "error",
            {
                "allowAllPropertiesOnSameLine": true
            }
        ],
        "one-var": "off",
        "padded-blocks": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "strict": "off"
    }
}